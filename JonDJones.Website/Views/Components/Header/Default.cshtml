@model JonDJones.Core.ViewComponents.HeaderViewModel

<!-- Header -->
<section id="header">
	<div class="container">

		<!-- Logo -->
		<h1 id="logo"><a href="index.html">Title</a></h1>
		<p>A responsive HTML5 site template. Manufactured by HTML5 UP.</p>

		<!-- Nav -->
		<nav id="nav">
			<ul>
				@foreach(var item in Model.MenuItems)
				{
					<li>
						<a class="icon solid fa-home" href="@item.Url()"><span>@item.Name</span></a>
						@if (item.Links.Any())
						{
							<ul>
								@foreach (var link in item.Links)
								{
									<li><a href="@link.Url">@link.Name</a></li>
								}
							</ul>
						}
				</li>
				}
			</ul>
		</nav>
	</div>
</section>